%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title VideoApp
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.nav-extended
      .nav-wrapper
        %a.brand-logo.center{:href => "#"} Vidmeow!
      .nav-content
        %ul.tabs.tabs-transparent
          %li.tab
            %a{:href => "#test1"} Test 1
          %li.tab
            %a.active{:href => "#test2"} Test 2
          %li.tab.disabled
            %a{:href => "#test3"} Disabled Tab
          %li.tab
            %a{:href => "#test4"} Test 4


    .container
      = yield
